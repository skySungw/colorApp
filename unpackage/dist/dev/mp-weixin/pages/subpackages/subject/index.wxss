.box.subject-box {
  background-color: #FFFFFF;
}
.subject-container_header {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}
.subject-container_header__title {
  font-weight: bold;
  font-size: 36rpx;
}
.subject-container_header__view {
  font-size: 24rpx;
  color: #999;
  margin: 20rpx 0;
}
.subject-container_header__introduce {
  font-size: 26rpx;
  color: #666;
  letter-spacing: 2rpx;
}
.subject-container_content {
  overflow: hidden;
}
.subject-container_content .subject-scroll {
  height: 100%;
}
.subject-container_content .subject-scroll .img_item {
  width: 48%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
}
.subject-container_content .subject-scroll .img_item .img-topic {
  flex-wrap: wrap;
}
.subject-container_content .subject-scroll .img_item .img-topic_tag {
  margin-right: 5rpx;
  padding: 5rpx 0;
  font-size: 18rpx;
  color: #999;
  font-weight: 200;
}
.subject-container_content .subject-scroll .img_item .img-topic_tag text {
  display: inline-block;
  font-weight: bold;
  font-size: 16rpx;
  width: 26rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  background-color: #000;
  color: #fff;
  border-radius: 50%;
  margin-right: 5rpx;
}
.subject-container_content .subject-scroll .img_item .img-face {
  border-radius: 10rpx;
}
.subject-container_content .subject-scroll .img_item .card-title {
  font-weight: bold;
  color: #333;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.subject-container_content .subject-scroll .img_item .card-info .card-header {
  font-size: 20rpx;
  color: #666;
}
.subject-container_content .subject-scroll .img_item .card-info .card-header image {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

